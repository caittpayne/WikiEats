<!DOCTYPE html>
<html lang="en">
  <% include ../static/partials/head.ejs %>
  <body>
        <% include ../static/partials/navbar.ejs %>
    <main class="container">
        <% include ../static/partials/messages.ejs %>
      <section class="row align-items-center justify-content-center main">
        <section class="col-md-12 text-center align-self-center">
          <h4>Choose from one of our plans to start collaborating</h4>
        </section>
      </section>
      <section class="row align-items-center justify-content-center">
        <section class="col-md-8 align-self-center plans">
          <section class="row align-items-center justify-content-center">
            <section class="col-md-6 align-self-start">
              <h4>Free</h4>
              <ul>
                <li>No Cost</li>
                <li>Unlimited Public Wikis</li>
                <li>5 Collaborators per Wiki</li>
              </ul>
            </section>
            <section class="col-md-6 align-self-start">
              <h4>Premium</h4>
              <ul>
                <li>$9.99/mo.</li>
                <li>Unlimited Private Wikis</li>
                <li>Unlimited Public Wikis</li>
                <li>Unlimited Collaborators</li>
              </ul>
            </section>
          </section>
          <section class='row align-items-center justify-content-center'>
            <section class="col-md-6 text-center align-self-center">
                <button
                    class="btn btn-md"
                    data-toggle="modal"
                    data-target="#exampleModalCenter"
                >
                Sign Up
                </button>
            </section>
            <section class="col-md-6 text-center align-self-center">
                <button
                    class="btn btn-md"
                    data-toggle="modal"
                    data-target="#exampleModalCenter"
                >
                Sign Up
                </button>
            </section>
          </section>
          <section>
        </section>
      </section>

      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModalCenter"
        tabindex="-1"
        role="dialog"
        aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">
                Modal title
              </h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form method="POST" action="/users">
                <div class="form-group">
                  <label>Name:</label>
                  <input
                    type="text"
                    name="name"
                    placeholder="Enter Name"
                    class="form-control"
                  />
                </div>
                <div class="form-group">
                  <label>Email:</label>
                  <input
                    type="email"
                    name="email"
                    placeholder="Enter Email"
                    class="form-control"
                  />
                </div>
                <div class="form-group">
                  <label>Password:</label>
                  <input
                    type="password"
                    name="password"
                    placeholder="Enter Password"
                    class="form-control"
                  />
                </div>
                <div class="form-group">
                  <label>Password:</label>
                  <input
                    type="password"
                    name="password_conf"
                    placeholder="Enter Password confirmation"
                    class="form-control"
                  />
                </div>
                <br />
                <input type="submit" value="Sign Up" class="btn btn-primary" />
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
