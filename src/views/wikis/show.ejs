<!DOCTYPE html>
<html>
<head>
    <% include ../static/partials/head.ejs %>
</head>
<body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
        <% include ../static/partials/messages.ejs %>
        <div style="display: flex; align-items:center;">
            <h1>
                <%= wiki.title %>
            </h1>
        </div>
        <% if(currentUser) { %>
        <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-primary">Edit</a>
        <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <% } %>
        <p>
            <%- html %>
        </p>
        <div>
                <% if(wiki.collaborators) { %>
                    <% wiki.collaborators.forEach((collaborator) => { %>
                    <%- include("../collaborators/show.ejs", {collaborator}) %>
                    <% }) %>
                    <% } %>

                    <% if(wiki.private === true) { %>
                        <a href="/wikis/<%= wiki.id %>/collaborators/edit" class="btn btn-primary btn-md">Add Collaborators</a>
                        <% } %>
        </div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>